<style>
    .about-hero {
        background: linear-gradient(135deg, #F7FFF7 0%, #FFFFFF 100%);
    }

    .section-title {
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background-color: var(--primary-color);
            border-radius: 2px;
        }

    .story-card, .value-card {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
        border-radius: var(--radius-lg);
    }

        .story-card:hover, .value-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary-color);
        }

    .story-icon i, .value-icon i {
        transition: transform 0.3s ease;
    }

    .story-card:hover .story-icon i,
    .value-card:hover .value-icon i {
        transform: scale(1.2);
    }

    .timeline {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 50%;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: var(--primary-color);
            transform: translateX(-50%);
        }

    .timeline-item {
        position: relative;
        margin-bottom: 40px;
        width: 50%;
        padding-right: 30px;
    }

        .timeline-item:nth-child(even) {
            margin-left: 50%;
            padding-left: 30px;
            padding-right: 0;
        }

    .timeline-date {
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 10px;
        font-size: 1.1rem;
    }

    .timeline-content {
        background: white;
        padding: 20px;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
        border: 1px solid #e9ecef;
    }

    .team-avatar {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        overflow: hidden;
        border: 3px solid var(--primary-color);
    }

        .team-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .team-card {
        transition: all 0.3s ease;
        padding: 20px;
        border-radius: var(--radius-lg);
        border: 1px solid #e9ecef;
    }

        .team-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary-color);
        }

    .team-social a {
        transition: all 0.3s ease;
    }

        .team-social a:hover {
            transform: scale(1.2);
        }

    .cta-section {
        border-radius: var(--radius-xl);
        margin: 40px auto;
        max-width: 1200px;
    }

    @@media (max-width: 768px) {
        .timeline::before {
            left: 20px;
        }

        .timeline-item {
            width: 100%;
            padding-left: 50px;
            padding-right: 0;
        }

            .timeline-item:nth-child(even) {
                margin-left: 0;
                padding-left: 50px;
            }

        .team-avatar {
            width: 100px;
            height: 100px;
        }
    }
</style>